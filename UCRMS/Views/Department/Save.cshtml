@using System.Collections.Concurrent
@using UCRMS.Models.EntityModels
@model Department
@{
    ViewBag.Title = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <br/>
    <br/>
    <br />
    <div class="col-md-offset-2 col-md-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Save Department
            </div>
            @using (@Html.BeginForm("Save", "Department", FormMethod.Post, new {@id = "saveDepartmentForm", @class = "form-horizontal"}))
            {
                <div class="panel-body">
                    <div class="col-md-offset-3 col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Code, new {@class = "control-label col-sm-4"})
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.Code, new {@class = "form-control"})
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, new {@class = "control-label col-sm-4"})
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-primary pull-right" id="saveDepartmentButton" name="saveDepartmentButton">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>
