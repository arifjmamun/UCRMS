
@{
    ViewBag.Title = "AssignCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <br />
    <div class="col-md-offset-2 col-md-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Course Assign to Teacher
            </div>

            <div class="panel-body">
                @if (ViewBag.Status != null)
                {
                    <div class="alert @ViewBag.Status[0] alert-dismissable">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>@ViewBag.Status[1]</strong> @ViewBag.Status[2]
                    </div>
                }
                @using (@Html.BeginForm("AssignCourse", "Teacher", FormMethod.Post, new { @id = "assignCourseForm", @class = "form-horizontal" }))
                {
                    <div class="col-md-offset-2 col-md-8">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                <small class="error-msg">@Html.ValidationMessageFor(m => m.Name)</small>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Address, new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.TextAreaFor(m => m.Address, new { @class = "form-control vertical" })
                                <small class="error-msg">@Html.ValidationMessageFor(m => m.Address)</small>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                <small class="error-msg">@Html.ValidationMessageFor(m => m.Email)</small>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.ContactNo, new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control" })
                                <small class="error-msg">@Html.ValidationMessageFor(m => m.ContactNo)</small>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.DesignationId, new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.DropDownListFor(m => m.DesignationId, ViewBag.Designations as IEnumerable<SelectListItem>, "Select One", new { @class = "form-control" })
                                <small class="error-msg">@Html.ValidationMessageFor(m => m.DesignationId)</small>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.DepartmentId, new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.DropDownListFor(m => m.DepartmentId, ViewBag.Departments as IEnumerable<SelectListItem>, "Select One", new { @class = "form-control" })
                                <small class="error-msg">@Html.ValidationMessageFor(m => m.DepartmentId)</small>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.CreditToBeTaken, new { @class = "control-label col-md-5" })
                            <div class="col-md-7">
                                @Html.TextBoxFor(m => m.CreditToBeTaken, new { @class = "form-control" })
                                <small class="error-msg">@Html.ValidationMessageFor(m => m.CreditToBeTaken)</small>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary pull-right" id="assignCourseButton" name="assignCourseButton">Save</button>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>

</div>

